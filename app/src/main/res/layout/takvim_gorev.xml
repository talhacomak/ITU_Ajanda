<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/etkinlik"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/aciklama"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/baslangic"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/bitis"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Hatırlatıcılar"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:paddingLeft="4dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/Etkinlikten"
        android:textSize="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ListView
            android:id="@+id/l1"
            android:layout_width="53dp"
            android:layout_height="40dp"/>

        <TextView
            android:paddingTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/gün"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/l2"
            android:layout_width="53dp"
            android:layout_height="40dp"/>

        <TextView
            android:paddingTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/saatt"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/l3"
            android:layout_width="53dp"
            android:layout_height="40dp"/>

        <TextView
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/dk"
            android:textSize="20dp"/>
        <TextView
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:hint="@string/önce"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Tekrar"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>